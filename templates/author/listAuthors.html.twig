<table border="1">
<tr>
        <th>Id</th>
        <th>username</th>
        <th>Email</th>
        <th>Number of books</th>
        <th>Actions</th>
    </tr>
{% for i in tabAuthorsAll %}
     <tr>
            <td>{{ i.id }}</td>
            <td> {{ i.username|upper }}</td>
            <td>{{ i.email }}</td>
            <td>{{i.nbrBooks}}</td>
            <td><a href="{{path('author_update',{'id' : i.id}) }}">Edit</a>
                <a href="{{path('author_remove',{'id' : i.id}) }}">Delete</a>
    </tr>

    {% endfor %}

</table>


